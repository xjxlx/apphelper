<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppThem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--设置不适用ActionBar-->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="android:activityOpenEnterAnimation">@anim/navigation_enter_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/navigation_exit_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/navigation_pop_enter_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/navigation_pop_exit_animation</item>

    </style>

</resources>
