<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.widget.CustomRoundImageActivity">

    <android.helper.widget.RoundView
        android:id="@+id/rv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_50"
        android:adjustViewBounds="true"
        android:src="@drawable/abc"
        android:visibility="visible"
        app:rv_angle="leftTop|rightTop|rightBottom"
        app:rv_placeholder="true"
        app:rv_radius="@dimen/dp_20"
        app:rv_roundType="Round" />

</RelativeLayout>